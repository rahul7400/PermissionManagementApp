<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/logo"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rgstart" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:id="@+id/txt1"
        android:textSize="24dp"
        android:layout_below="@+id/myappicon"
        android:text="About"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/txt2"
        android:textSize="16dp"
        android:layout_below="@+id/txt1"
        android:text="Macrocodes"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/txt3"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txt2"
        android:text="Since user's privacy is the most important thing in today's world. So this shows you all the permissions that your installed app is using without your concern and helps you to manage the permissions of the apps.
Macrocodes supports Atmanirbhar Bharat and Make in India campaigns.\nDo you support these campaigns?\nIf yes than share our app with your friends and family members and support Indian apps."/>

<Button
    android:layout_width="230dp"
    android:layout_below="@+id/txt3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:text="Share app"
    android:id="@+id/shareapp"
    android:textColor="#ffffff"
    android:padding="20dp"
    android:background="@drawable/button_bg2"
    android:layout_height="wrap_content"/>
    <Button
        android:layout_width="230dp"
        android:layout_below="@+id/shareapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Rate app"
        android:id="@+id/rateApp"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:background="@drawable/button_bg2"
        android:layout_height="wrap_content"/>


</RelativeLayout>